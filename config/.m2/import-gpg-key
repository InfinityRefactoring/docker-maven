#!/bin/bash

GPG_PASSPHRASE="${GPG_PASSPHRASE:-$MAVEN_GPG_PASSPHRASE}"
GPG_PASSPHRASE="${1:-$GPG_PASSPHRASE}"
GPG_KEY_VALUE="${GPG_KEY_VALUE:-$MAVEN_GPG_KEY_VALUE}"
GPG_KEY_VALUE="${2:-$GPG_KEY_VALUE}"

if [ "$GPG_KEY_VALUE" != "" ]; then
    gpg2 --import --batch --passphrase "$GPG_PASSPHRASE" <<< "$GPG_KEY_VALUE"
fi